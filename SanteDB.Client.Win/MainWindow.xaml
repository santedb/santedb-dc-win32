<Window
    x:Class="SanteDB.Client.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SanteDB.Client.Windows.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <RelativePanel x:Name="TitleBar" Grid.Row="0">
            <Border RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" x:Name="ButtonBorder" Background="Transparent">
                <CommandBar DefaultLabelPosition="Collapsed" TabIndex="2">
                    <AppBarButton Icon="Back" Label="Back" x:Name="BackButton" Click="BackButton_Click" IsEnabled="false" />
                    <AppBarButton Icon="Forward" Label="Forward" x:Name="ForwardButton" Click="ForwardButton_Click" IsEnabled="false" />
                    <AppBarButton Icon="Refresh" Label="Reload" x:Name="RefreshButton" Click="RefreshButton_Click" IsEnabled="false" />
                    <AppBarButton Icon="Help" Label="About" x:Name="AboutButton" Click="AboutButton_Click" />
                </CommandBar>
            </Border>
            <Border x:Name="TitleBarDragArea" RelativePanel.RightOf="ButtonBorder" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignTopWithPanel="true" RelativePanel.AlignRightWithPanel="true">
            </Border>
            <TextBlock Style="{StaticResource CaptionTextBlockStyle}" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" TextAlignment="Center" x:Name="TitleBarText" Text="SanteDB" />
        </RelativePanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" x:Name="SplashStack" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Assets/SanteDB-Render.png" Margin="25" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" x:Name="SplashImage" MaxWidth="400" MaxHeight="300"></Image>
            <TextBlock x:Name="SplashStatusText" HorizontalAlignment="Center" MaxWidth="600" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
        <WebView2 Grid.Row="1" x:Name="Browser" CoreWebView2Initialized="Browser_CoreWebView2Initialized" TabIndex="1" Visibility="Collapsed"></WebView2>
        <ContentDialog x:Name="AboutDialog" Title="About SanteDB" IsPrimaryButtonEnabled="True" DefaultButton="Primary" PrimaryButtonText="Close">
            <StackPanel Orientation="Vertical" Spacing="5">
                <TextBlock>Version <Run Text="{x:Bind GetAssemblyVersion()}"></Run></TextBlock>
                <TextBlock Text="{x:Bind GetAssemblyCopyright()}"></TextBlock>
            </StackPanel>
        </ContentDialog>
        <ContentDialog x:Name="AlertDialog" Title="Alert" IsPrimaryButtonEnabled="True" DefaultButton="Primary" PrimaryButtonText="Ok">
            <TextBlock x:Name="AlertDialogText"></TextBlock>
        </ContentDialog>
    </Grid>
</Window>
